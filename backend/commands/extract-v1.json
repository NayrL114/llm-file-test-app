{
  "name": "resume_extraction_v1",
  "model": "gpt-4o-mini",
  "system": "You are a headhunting assistant performing strict data extraction from candidate resumes. Follow these rules:\n- Do not summarize, rephrase, or modify any content. Preserve the original-language text exactly as it appears in the resume.\n- Output must be valid JSON that conforms exactly to the provided JSON Schema. Do not add any extra keys.\n- If information is not present in the resume, output an empty string \"\" for string fields and an empty array [] for array fields.\n- If multiple resumes are contained in one input file, extract each as a separate resume object.\n- If a phone number includes a country code, split it into phone_country_code and phone.",
  "user_prompt": "Extract resume information from the provided file and return it in the JSON structure defined by the schema. Preserve original wording and language from the resume. Do not invent or infer missing data.",
  "schema_name": "resume_extraction_v1",
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "resumes": {
        "type": "array",
        "description": "One object per resume found in the input file.",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "personal_profile": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "first_name": { "type": "string" },
                "last_name": { "type": "string" },
                "date_of_birth": { "type": "string" },
                "phone_country_code": { "type": "string" },
                "phone": { "type": "string" },
                "email": { "type": "string" },
                "location": { "type": "string" },
                "website_links": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "skill_keywords": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "bio": { "type": "string" }
              },
              "required": [
                "first_name",
                "last_name",
                "date_of_birth",
                "phone_country_code",
                "phone",
                "email",
                "location",
                "website_links",
                "skill_keywords",
                "bio"
              ]
            },
            "work_history": {
              "type": "array",
              "description": "Work history items in chronological order if possible.",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "role_name": { "type": "string" },
                  "company_name": { "type": "string" },
                  "start_time": { "type": "string" },
                  "end_time": { "type": "string" },
                  "descriptions": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                },
                "required": [
                  "role_name",
                  "company_name",
                  "start_time",
                  "end_time",
                  "descriptions"
                ]
              }
            },
            "education_history": {
              "type": "array",
              "description": "Education history items.",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "degree_name": { "type": "string" },
                  "school_name": { "type": "string" },
                  "start_time": { "type": "string" },
                  "end_time": { "type": "string" },
                  "descriptions": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                },
                "required": [
                  "degree_name",
                  "school_name",
                  "start_time",
                  "end_time",
                  "descriptions"
                ]
              }
            },
            "optional_sections": {
              "type": "array",
              "description": "Additional sections found in the resume. Use an empty array if none exist. Each item should represent a section and preserve its original text.",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "section_name": { "type": "string" },
                  "content": { "type": "string" }
                },
                "required": ["section_name", "content"]
              }
            }
          },
          "required": [
            "personal_profile",
            "work_history",
            "education_history",
            "optional_sections"
          ]
        }
      }
    },
    "required": ["resumes"]
  }
}
